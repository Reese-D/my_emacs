;;; Commentary:

;; 

;;; Code:
(make-variable-buffer-local
 (defvar lossageCalled nil "checks if the functions been called before"
   )
 )

(make-variable-buffer-local
 (defvar _currentBuffer nil "the stored buffer")
 )

(make-variable-buffer-local
 (defvar commandList nil "list of commands")
 )

(defun buffer-to-list (buf)
  (with-current-buffer buf
    (push (split-string (buffer-string) commandList))
    )
  )

  

(defun watch-commands (lossageBuffer)
  (interactive)
  (if (not lossageCalled)
      (progn
	(setf lossageCalled t)
	(setf _currentBuffer (current-buffer))
	(set-buffer lossageBuffer)
	(erase-buffer)
	(set-buffer _currentBuffer)
	)
    (buffer-to-list lossageBuffer)
    )
  )

(defun repeat-commands ()
  (interactive)
  (if (not (endp commandList))
      (progn
	(call-interactively (global-key-binding (pop commandList)))
	)
    )
  )

(define-minor-mode repeat
  "watches keystrokes in order to repeat them."
  :init-value nil
  :lighter "._a"
  :keymap nil
  (if repeat
      (watch-commands (view-lossage))
    (progn
      (watch-commands nil)
      (repeat-commands)
      (setf _currentBuffer nil)
      (setf lossageCalled nil)
      (setf commandList nil)
    )
    )
  )


(provide 'repeat)
;;; repeat.el ends here
